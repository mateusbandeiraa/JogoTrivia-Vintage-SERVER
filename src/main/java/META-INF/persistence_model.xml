<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="br.uniriotec.bsi.tp2.JogoTrivia">
	
		<class>br.uniriotec.bsi.tp2.JogoTrivia_API.Interacao</class>
		<class>br.uniriotec.bsi.tp2.JogoTrivia_API.Jogo</class>
		<class>br.uniriotec.bsi.tp2.JogoTrivia_API.Participante</class>
		<class>br.uniriotec.bsi.tp2.JogoTrivia_API.Partida</class>
		<class>br.uniriotec.bsi.tp2.JogoTrivia_API.Questao</class>
		<class>br.uniriotec.bsi.tp2.JogoTrivia_API.ConjuntoAlternativas</class>
		<class>br.uniriotec.bsi.tp2.JogoTrivia_API.ConjuntoMultiplo</class>
		<class>br.uniriotec.bsi.tp2.JogoTrivia_API.ConjuntoOrdenado</class>
		<class>br.uniriotec.bsi.tp2.JogoTrivia_API.ConjuntoUnitario</class>
		<class>br.uniriotec.bsi.tp2.JogoTrivia_API.Opcao</class>
		
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:mysql://" />
			<property name="javax.persistence.jdbc.user" value="" />
			<property name="javax.persistence.jdbc.password" value="" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
		</properties>
	</persistence-unit>
	
		<persistence-unit name="br.uniriotec.bsi.tp2.JogoTriviaTest">
	
		<class>br.uniriotec.bsi.tp2.JogoTrivia_API.Interacao</class>
		<class>br.uniriotec.bsi.tp2.JogoTrivia_API.Jogo</class>
		<class>br.uniriotec.bsi.tp2.JogoTrivia_API.Participante</class>
		<class>br.uniriotec.bsi.tp2.JogoTrivia_API.Partida</class>
		<class>br.uniriotec.bsi.tp2.JogoTrivia_API.Questao</class>
		<class>br.uniriotec.bsi.tp2.JogoTrivia_API.ConjuntoAlternativas</class>
		<class>br.uniriotec.bsi.tp2.JogoTrivia_API.ConjuntoMultiplo</class>
		<class>br.uniriotec.bsi.tp2.JogoTrivia_API.ConjuntoOrdenado</class>
		<class>br.uniriotec.bsi.tp2.JogoTrivia_API.ConjuntoUnitario</class>
		<class>br.uniriotec.bsi.tp2.JogoTrivia_API.Opcao</class>
		
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:mysql://localhost:3306/JOGOTRIVIA?createDatabaseIfNotExist=true" />
			<property name="javax.persistence.jdbc.user" value="" />
			<property name="javax.persistence.jdbc.password" value="" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
		</properties>
	</persistence-unit>

</persistence>
